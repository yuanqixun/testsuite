<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<!-- mysql datasource -->  
	<persistence-unit name="test">
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
			<property name="hibernate.connection.password" value="123456"/>
			<property name="hibernate.connection.url" value="jdbc:mysql://192.168.250.231:3306/bdp-yuan"/>
			<property name="hibernate.connection.username" value="root"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.min_size" value="5"/>
			<property name="hibernate.max_size" value="20"/>
			<property name="hibernate.timeout" value="300"/>
			<property name="hibernate.max_statements" value="50"/>
			<property name="hibernate.idle_test_period" value="3000"/>
		</properties>
	</persistence-unit>
</persistence>
